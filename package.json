{
  "author": "Octopus Deploy",
  "bugs": {
    "url": "https://github.com/OctopusDeploy/create-release-action/issues"
  },
  "dependencies": {
    "@actions/core": "^1.7.0",
    "@actions/exec": "^1.1.1",
    "tmp": "^0.2.1"
  },
  "description": "GitHub Action to Create a Release in Octopus Deploy",
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.31",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/parser": "^5.22.0",
    "@vercel/ncc": "^0.33.4",
    "eslint": "^8.14.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^26.1.5",
    "jest": "^28.1.1",
    "jest-circus": "^28.0.3",
    "jest-junit": "^14.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.6.2",
    "ts-jest": "^28.0.1",
    "typescript": "^4.6.4"
  },
  "homepage": "https://github.com/OctopusDeploy/create-release-action#readme",
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "setupFiles": [
      "<rootDir>/src/test-setup.ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "testRunner": "jest-circus/runner",
    "testTimeout": 10000,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeperator": " > ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "keywords": [
    "cli",
    "deployment",
    "octopus-deploy",
    "github-actions"
  ],
  "license": "Apache-2.0",
  "main": "src/index.ts",
  "name": "create-release-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OctopusDeploy/create-release-action.git"
  },
  "scripts": {
    "all": "npm run format && npm run build && npm test",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "prebuild": "eslint src/**/*.ts",
    "postbuild": "ncc build out/index.js -o dist",
    "test": "jest --ci --reporters=default --reporters=jest-junit"
  },
  "version": "1.1.4"
}
